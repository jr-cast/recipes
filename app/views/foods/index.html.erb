<%= link_to 'Add Food', new_food_path, data: {turbo: false} %>

<table>
  <tr>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Unit Price</th>
    <th>quantity</th>
    <th>Actions</th>
  </tr>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= food.quantity %></td>
      <td><%= button_to 'Delete', food_path(food), method: :delete %></td>
    </tr>
  <% end %>
</table>
